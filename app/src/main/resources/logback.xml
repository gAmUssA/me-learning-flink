<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Define the pattern used by the ConsoleAppender with colors -->
    <property name="CONSOLE_LOG_PATTERN" value="%blue(%d{yyyy-MM-dd HH:mm:ss}) %highlight(%-5level) %magenta([%thread]) %cyan(%logger{36}) - %msg%n%throwable"/>

    <!-- Define the pattern used by the FileAppender -->
    <property name="FILE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n%throwable"/>

    <!-- Define the location of the log file -->
    <property name="LOG_FILE" value="logs/myapp.log"/>

    <!-- Console Appender with color support -->
    <appender name="ConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- File Appender -->
    <appender name="FileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Rotate log file daily -->
            <fileNamePattern>logs/myapp-%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Keep 30 days worth of logs -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Set the default logging level to INFO -->
    <root level="INFO">
        <appender-ref ref="ConsoleAppender"/>
        <!--        <appender-ref ref="FileAppender" />-->
    </root>

    <!-- Suppress Flink logs -->
    <logger name="org.apache.flink" level="WARN"/>
    <logger name="org.apache.kafka" level="WARN"/>
    <logger name="org.apache.zookeeper" level="WARN"/>
    <logger name="akka" level="WARN"/>
    <!-- Set DEBUG level for a specific package -->
    <logger name="com.example.myapp" level="DEBUG"/>

    <!-- Set ERROR level for a specific package -->
    <logger name="org.springframework" level="ERROR"/>

</configuration>